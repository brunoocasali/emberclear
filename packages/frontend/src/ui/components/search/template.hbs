<Modal @isActive={{@isActive}} @close={{action @close}}>

  <form {{action this.submitSearch on='submit'}}>
    <div class='field'>
      <div class='control'>
        {{input
          autofocus
          id=this.inputId
          type='text'
          class='input is-large'
          value=this.searchText
          placeholder=(t 'ui.search.title')
          input=(action this.submitSearch)
        }}
      </div>
    </div>
    <input style='display: none' type='submit' value='submit'>
  </form>

  <div class='m-t-lg overflows' style='max-height: 250px;'>
    <h5>{{t 'ui.search.contacts'}}</h5>

    {{#each identityResults as |identity|}}
      <Result @to='chat.privately-with' @id={{identity.uid}}>
        <span>
          @ <strong class='has-text-link'>{{identity.name}}</strong>
        </span>
        <span>
          {{first-8 identity.uid}}
        </span>
      </Result>
    {{else}}
      {{t 'ui.search.noContacts'}}
    {{/each}}

    <hr>
    <h5>{{t 'ui.search.channels'}}</h5>

    {{#each channelResults as |channel|}}
      <Result @to='chat.in-channel' @id={{channel.id}}>
        <span>
          # {{channel.name}}
        </span>
        <span>
          {{first-8 channel.id}}
        </span>
      </Result>
    {{else}}
      {{t 'ui.search.noChannels'}}
    {{/each}}
  </div>
</Modal>
