<KeyboardPress @key='Escape' @onDown={{action @close}} />

<div
  ...attributes
  aria-modal
  aria-hidden={{not @isActive}}
  class='modal {{if @isActive 'is-active'}}'
>
  <div
    class='modal-background'
    role='button'
    aria-label={{t 'buttons.ariaLabel.modalBackdrop'}}
    onclick={{action @close on='click'}}
  />

  <div class='modal-content'>
    <div class='box {{@boxClasses}}'>
      {{yield}}
    </div>
  </div>

  <button
    class='modal-close is-large'
    aria-label={{t 'buttons.ariaLabel.closeModal'}}
    {{action @close}}
  />
</div>

