{{#if this.isVisible}}
  <div
    data-test-notification-prompt
    class='
      notification is-info
      has-text-centered
      is-radiusless p-sm transition-all
      has-shadow
    '
    style='margin-bottom: 0;'
  >
    <button
      data-test-dismiss
      class='delete'
      {{action this.askNextTime}}>
    </button>

    <strong>{{t 'ui.notifications.prompt.title'}}</strong>

    <div data-test-enable class='flex justify-content-space-around m-t-sm'>
      <a {{action this.enableNotifications}}>
        {{t 'ui.notifications.prompt.enable'}}
      </a>

      <a data-test-ask-later {{action this.askNextTime}}>
        {{t 'ui.notifications.prompt.askLater'}}
      </a>

      <a data-test-ask-never {{action this.neverAskAgain}}>
        {{t 'ui.notifications.prompt.neverAsk'}}
      </a>
    </div>
  </div>
{{/if}}
