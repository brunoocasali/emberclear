<div
  class='flex justify-content-center align-items-center'
  style='width: 100%; height: 300px; overflow: hidden'
>

  {{#unless this.started}}
    <div style='width: 250px; height: 250px;' class='loader'></div>
  {{/unless}}

  {{#if this.cameraNotFound}}
    No camera was found. Perhaps camera permissions have been disabled?
  {{/if}}

  <video
    id='qr-preview'
    class='w-100 {{if this.started 'is-block' 'is-hidden'}}'
    autoplay='autoplay'
  />

</div>

<span class='flex justify-content-space-between m-t-md'>
  <button class='button' {{action @onCancel}}>
    {{t 'buttons.cancel'}}
  </button>
</span>
