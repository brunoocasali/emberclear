<div class='field navbar-item' style='margin-bottom: 0;'>
  <div class='control has-icons-left'>
    <div class='select is-small'>

      <XSelect @value={{this.currentLocale}} @onChange={{action this.chooseLanguage}} as |xs|>
        {{#each this.options as |opt|}}
          <xs.option @value={{opt.locale}}>
            {{opt.label}}
          </xs.option>
        {{/each}}
      </XSelect>

    </div>

    <div class='icon is-small is-left'>
      {{fa-icon 'globe'}}
    </div>
  </div>
</div>
