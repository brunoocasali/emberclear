<table data-test-relays>
  <thead>
    <tr>
      <th></th>
      <th>Priority</th>
      <th>URLs</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each @relays as |relay|}}
      <tr>
        <td>
          <a {{action this.makeDefault relay}}>
            Make default
          </a>
        </td>
        <td>{{relay.priority}}</td>
        <td>
          <label class='has-text-weight-bold'>socket:</label> {{relay.socket}}<br>
          <label class='has-text-weight-bold'>open graph:</label> {{relay.og}}
        </td>
        <td>
          <a {{action this.remove relay}}>
            {{t 'buttons.remove'}}
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
