<table data-test-contacts>
  <thead>
    <tr>
      <th>{{t 'models.identity.name'}}</th>
      <th>{{t 'models.identity.publicKey'}}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    {{#each this.contacts key='id' as |identity|}}
      <tr data-test-contact-row>
        <td>
          {{identity.name}}
        </td>
        <td>
          {{first-8 identity.publicKeyAsHex}}...
        </td>
        <td class='flex justify-content-end'>
          <button {{on 'click' this.remove identity}}
            class='button is-danger'>
            {{t 'buttons.remove'}}
          </button>
        </td>
      </tr>
    {{/each}}

    {{#if (eq this.contacts.length 0)}}
      <tr>
        <td colspan='3'>
          {{t 'ui.contacts.noContacts'}}
        </td>
      </tr>
    {{/if}}

  </tbody>
</table>
