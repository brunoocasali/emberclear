<Modal @isActive={{@isActive}} @close={{action @close}}>

<form {{action this.submitSearch on='submit'}}>
  <div class='field'>
    <div class='control'>
      {{input
        autofocus
        type='text'
        class='input is-large'
        value=this.searchText
        placeholder=(t 'ui.search.title')
        input=(action this.submitSearch)
      }}
    </div>
  </div>
  <input style='display: none' type='submit' value='submit'>
</form>

  <p class='m-lg'>
    {{#each identityResults as |identity|}}
      {{identity.name}}<br>
    {{else}}
      No Contacts found
    {{/each}}

    <hr>

    {{#each channelResults as |channel|}}
      {{channel.name}}<br>
    {{else}}
      No Channels Found
    {{/each}}
  </p>
</Modal>
